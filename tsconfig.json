{
  "extends": "fastify-tsconfig",
  "compilerOptions": {
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "outDir": "dist",
    "sourceMap": true,
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true
  },
  "include": ["src/**/*.ts"]
}
